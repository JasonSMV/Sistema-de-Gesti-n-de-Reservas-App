@model DataAccessLibrary.Models.ReservaViewModel

@{
    ViewBag.Title = "Eliminar Reserva";
}

<h2>Eliminar Reserva</h2>

<div>
    <h4>Seguro que deseas eliminar esta reserva?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sala
        </dt>
        <dd class="col-sm-10">
            @Model.NombreSala
        </dd>
        <dt class="col-sm-2">
            Fecha de Reserva
        </dt>
        <dd class="col-sm-10">
            @Model.FechaReserva.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Model.Usuario
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Reservas", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <button type="submit" class="btn btn-danger">Eliminar</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>